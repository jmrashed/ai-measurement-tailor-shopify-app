<!-- measurements.liquid -->

{% layout 'theme' %}

{% section 'header' %}

<main>
    <div class="container">
        <h1>Your Measurements</h1>
        <p>Below are your saved measurements. You can edit or delete them as needed.</p>

        {% if measurements.size > 0 %}
            <table class="measurements-table">
                <thead>
                    <tr>
                        <th>Measurement Type</th>
                        <th>Value</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for measurement in measurements %}
                        <tr>
                            <td>{{ measurement.type }}</td>
                            <td>{{ measurement.value }}</td>
                            <td>
                                <a href="/edit-measurement/{{ measurement.id }}" class="btn btn-edit">Edit</a>
                                <form action="/delete-measurement/{{ measurement.id }}" method="post" style="display:inline;">
                                    <button type="submit" class="btn btn-delete" onclick="return confirm('Are you sure you want to delete this measurement?');">Delete</button>
                                </form>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        {% else %}
            <p>No measurements found. Please add your measurements.</p>
        {% endif %}

        <h2>Add New Measurement</h2>
        <form action="/add-measurement" method="post">
            <label for="measurement-type">Measurement Type:</label>
            <input type="text" id="measurement-type" name="measurement_type" required>

            <label for="measurement-value">Value:</label>
            <input type="text" id="measurement-value" name="measurement_value" required>

            <button type="submit" class="btn btn-add">Add Measurement</button>
        </form>
    </div>
</main>

{% section 'footer' %}
